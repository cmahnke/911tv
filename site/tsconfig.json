{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "allowJs": true,
    "target": "es2020",
    "outDir": "build/compiled",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "lib": ["dom", "es2020"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "electron/**/*",
    "dist/**/*",
    "out/**/*",
    "build/**/*"
  ]
}
